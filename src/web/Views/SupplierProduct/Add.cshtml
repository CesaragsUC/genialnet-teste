@model Application.DTOs.ProductSupplier.SupplierProductDto

@{
    ViewData["Title"] = "Create Product";
}

<h2>Create Supplier-Product Relationship</h2>

<form method="post" asp-action="Add">
    <div class="form-group">
        <label asp-for="Suppliers" class="control-label"></label>
        <select asp-for="SupplierId" class="form-control" asp-items="@(new SelectList(Model.Suppliers, "Id", "Name"))">
            <option></option>
        </select>

        <span asp-validation-for="SupplierId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Products" class="control-label"></label>
        <select asp-for="ProductId" class="form-control" asp-items="@(new SelectList(Model.Products, "Id", "Name"))">
            <option></option>
        </select>

        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
